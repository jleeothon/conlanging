{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "/conlang1/word-list",
	"title": "Word list schema for Conlang1",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"entry": {"type": "string"},
			"pos": {
				"anyOf": [
					{"$ref": "#/definitions/pos"},
					{"type": "array", "items": {"$ref": "#/definitions/pos"}}
				]
			},
			"meaning": {
				"type": "string"
			},
			"tags": {
				"type": "array",
				"items": {"$ref": "#/definitions/tag"}
			},
			"template": {
				"$ref": "#/definitions/template"
			},
			"see": {
				"type": "array",
				"items": {"type": "string"}
			},
			"i-umlaut": {"type": "string"},
			"composition": {"type": "array", "items": {"type": "string"}}
		},
		"required": ["entry", "pos", "meaning"]
	},
	"definitions": {
		"template": {
			"type": "string",
			"enum": [
				"strong-1", "strong-2", "strong-3-i", "strong-34-e", "strong-5",
				"strong-5-j", "strong-6", "strong-6-j",
				"strong-7a", "strong-7b", "strong-7c-i", "strong-7c-e", "strong-7d", "strong-7e",
				"weak-jun", "weak-wun", "weak-lun", "weak-nun"
			]
		},
		"pos": {
			"type": "string",
			"enum": [
				"Adjective",
				"Adverb",
				"Conjunction",
				"Determiner",
				"Noun",
				"Preposition",
				"Verb",
				"Affix"
			]
		},
		"tag": {
			"type": "string",
			"enum": [
				"Animals",
				"Body",
				"Civilisation",
				"Clothing",
				"Descriptions",
                                "Family",
				"Feelings",
				"Food",
                                "Geography",
				"Language",
				"Movement",
				"Nature",
				"Numbers",
				"Plants",
				"Time"
			]
		}
	}
}
